<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FIVE.CreateSotrrud"
        Title="CreateSotrrud">

	<Grid Background="#f2f063">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>

		</Grid.ColumnDefinitions>

		<TextBlock  Text="Регистрация сотрудника" FontSize="55"
				   Grid.ColumnSpan="4" HorizontalAlignment="Center"/>
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Учётное имя" Grid.Row="1" FontSize="35" Margin="10"/>
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Пароль учетки" Grid.Row="2" FontSize="35" Margin="10"/>
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="ФИО" Grid.Row="3" FontSize="35" Margin="10"/>
		<TextBox Text="{Binding Login}" HorizontalAlignment="Left" VerticalAlignment="Center"
			x:Name="LoginText" Width="150" Height="80"  Margin="20"
				 Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
		<TextBox Text="{Binding Password}" HorizontalAlignment="Left" VerticalAlignment="Center"
			x:Name="PassText" Width="150" Height="80" Margin="20"
				 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
		<TextBox Text="{Binding IdHumanNavigation.Fio}" HorizontalAlignment="Left" VerticalAlignment="Center"
			x:Name="FIOText" Width="150" Height="80" Margin="20"
				 Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>
		<TextBox Text="{Binding IdHumanNavigation.Email}" Grid.Row="1" Grid.Column="2" Width="150" Height="80" Margin="20"
				 x:Name="EmailText" />
		<TextBox x:Name="PhoneText" Text="{Binding IdHumanNavigation.Phone}" Grid.Row="2" Grid.Column="2" Width="150" Height="80" Margin="20"
				/>
		<TextBlock  Text="Почта"  FontSize="35" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -10"/>
		<TextBlock Text="телефон"  FontSize="35" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -10"/>

		<Button Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="4"
				Width="350" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"
				HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
				Content="создать" FontSize="70"
				Click="Button_Click"/>






	</Grid>
		
		
	
	
</Window>
