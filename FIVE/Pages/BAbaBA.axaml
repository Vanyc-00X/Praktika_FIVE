<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FIVE.BAbaBA">

	<Grid Background="#f2f063">


		<DataGrid x:Name="DataBasket" DoubleTapped="DataGrid_DoubleTapped" >
			<DataGrid.Columns >
				<DataGridTextColumn Header="Покупателя номер" Binding="{Binding IdUser}" />

				<DataGridTextColumn Binding="{Binding IdTovarNavigation.NameTovar}" Header="Наименование"/>
				<DataGridTextColumn Header="Количество" Binding="{Binding CountTovar}" />
				

				<DataGridTemplateColumn Header="Действие">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Content="Удалить"
                                    Click="DeleteButton_Click"
                                    Tag="{Binding IdBasket}"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				
			</DataGrid.Columns>
		</DataGrid>
		
		
		
		
		
	</Grid>
	
	
	
</UserControl>
